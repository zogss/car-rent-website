</body>
<script src="/public/js/app.js"></script>
<script>
  //
  // Desativa envios de formulário, se houver campos inválidos.
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      // Pega todos os formulários que nós queremos aplicar estilos de validação Bootstrap personalizados.
      var forms = document.getElementsByClassName('needs-validation');
      // Faz um loop neles e evita o envio
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
  //
  // Formata para real durante a digitação
  function formatarMoeda() {
    let elemento = document.getElementById('valuePerDay');
    let valuePerDay = elemento.value;

    valuePerDay = valuePerDay + '';
    valuePerDay = parseInt(valuePerDay.replace(/[\D]+/g, ''));
    valuePerDay = valuePerDay + '';
    valuePerDay = valuePerDay.replace(/([0-9]{2})$/g, ",$1");

    if (valuePerDay.length > 6) {
        valuePerDay = valuePerDay.replace(/([0-9]{3}),([0-9]{2}$)/g, ".$1,$2");
    }

    elemento.value = valuePerDay;
    if(valuePerDay == 'NaN') elemento.value = '';
  }
  //
  // Mostrar/Ocultar perfil
  function menuToggle(){
    const toggleMenu = document.querySelector('.menu');
    toggleMenu.classList.toggle('active')
  }
</script>
</html>