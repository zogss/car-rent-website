  <script>
    // Desativa envios de formulário, se houver campos inválidos. (function() {
    'use strict'; window.addEventListener('load', function() { // Pega todos os
    formulários que nós queremos aplicar estilos de validação Bootstrap
    personalizados. const forms =
    document.getElementsByClassName('needs-validation'); // Faz um loop neles e
    evita o envio const validation = [...forms].filter(function(form) {
    form.addEventListener('submit', function(event) { if (form.checkValidity()
    === false) { event.preventDefault(); event.stopPropagation(); }
    form.classList.add('was-validated'); }, false); }); }, false); })();
  </script>
