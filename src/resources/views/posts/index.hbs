<div class="d-flex p-4">
  <div class="col-6">
    <h1>
      Posts
    </h1>
  </div>
  <div class="col-6 d-flex justify-content-end align-items-center">
    <a class="btn btn-primary py-2" href="/posts/create">
      Criar Post
    </a>
  </div>
</div>
<ul class="d-flex flex-wrap my-5 p-0 mw-100 w-100">
  {{#each posts as |post|}}
    <li class="d-flex list-group-item bg-body col-12 col-md-6 col-lg-6 col-xl-4 justify-content-center p-2">
      <div class="card w-100 shadow">
        <a href="/posts/{{post._id}}" class="text-decoration-none bg-dark bg-opacity-75 rounded-2">
          <img src="https://saabblog.net/wp-content/uploads/2021/04/Koenigsegg-One_1-1.jpeg" class="card-img-top" alt="..." />
          <div class="card-body border-top border-light border-opacity-25 text-light p-4">
            <h2 class="card-title fw-normal">R$: {{post.valuePerDay}}</h2>
            <p class="m-0 my-1 opacity-50">{{post.year}} | {{post.maxSpeed}} Km/h</p>
            <h5 class="card-title fw-light">{{post.title}}</h5>
          </div>
        </a>
      </div>
    </li>
  {{/each}}
</ul>