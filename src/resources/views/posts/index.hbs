<div class="d-flex p-4">
  <div class="col-6">
    <h1>
      Posts
    </h1>
  </div>
  <div class="col-6 d-flex justify-content-end align-items-center">
    <a class="btn btn-primary py-2" href="/posts/create">
      Criar Post
    </a>
  </div>
</div>
<ul class="d-flex flex-wrap my-5 p-0 mw-100 w-100">
  {{#each posts as |post|}}
    <li
      class="d-flex list-group-item justify-content-center col-12 col-md-6 col-lg-6 col-xl-4 p-2"
      style="height: 450px;"
    >
      <div class="card w-100 shadow">
        <a
          href="/posts/{{post._id}}"
          class="h-100 text-decoration-none bg-dark bg-opacity-75 rounded-1"
        >
          <div
            class="d-flex align-items-center justify-content-center m-3 bg-secondary bg-opacity-50"
            style="height: 60%;"
          >
            <img
              src={{post.url}}
              class="h-3"
              alt="..."
              style="max-height: 250px; max-width: 100%;"
            />
          </div>
          <div
            class="card-body border-top border-light border-opacity-25 text-light p-4"
          >
            <h2 class="card-title fw-normal">R$: {{post.valuePerDay}}</h2>
            <p class="m-0 my-1 opacity-50">{{post.year}}
              |
              {{post.maxSpeed}}
              Km/h</p>
            <h5 class="card-title fw-light">{{post.title}}</h5>
          </div>
        </a>
      </div>
    </li>
  {{/each}}
</ul>