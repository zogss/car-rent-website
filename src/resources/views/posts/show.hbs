<div class="row p-5 m-0 my-5 bg-dark text-white rounded-1">
  <div class="col-8 p-4 h-100">
    <div
      class="d-flex align-items-center justify-content-center m-3 p-3 bg-secondary bg-opacity-50"
      style="height: 60%;"
    >
      <img
        src={{post.url}}
        class="h-3"
        alt="..."
        style="max-height: 400em; max-width: 100%;"
      />
    </div>
    <div class="pt-4 mt-5 border-top border-1 border-white border-opacity-50">
      <table>
        <tbody>
          <tr class="text-white">
            <th class="bg-secondary bg-opacity-25 p-3 ps-4">Marca</th>
            <td
              class="bg-white bg-opacity-25 p-3 ps-4 w-100"
            >{{post.brand}}</td>
          </tr>
          <tr class="text-white">
            <th class="bg-secondary bg-opacity-50 p-3 ps-4">Modelo</th>
            <td
              class="bg-white bg-opacity-50 p-3 ps-4 w-100"
            >{{post.model}}</td>
          </tr>
          <tr class="text-white">
            <th class="bg-secondary bg-opacity-25 p-3 ps-4">Ano</th>
            <td class="bg-white bg-opacity-25 p-3 ps-4 w-100">{{post.year}}</td>
          </tr>
          <tr class="text-white">
            <th class="bg-secondary bg-opacity-50 p-3 ps-4">Placa</th>
            <td
              class="bg-white bg-opacity-50 p-3 ps-4 w-100"
            >{{post.plate}}</td>
          </tr>
          <tr class="text-white">
            <th class="bg-secondary bg-opacity-25 p-3 ps-4">Comprimento</th>
            <td class="bg-white bg-opacity-25 p-3 ps-4 w-100">{{post.size}}</td>
          </tr>
          <tr class="text-white">
            <th
              class="bg-secondary bg-opacity-50 p-3 ps-4 text-nowrap"
            >Velocidade máxima</th>
            <td
              class="bg-white bg-opacity-50 p-3 ps-4 w-100"
            >{{post.maxSpeed}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-4 p-0">
    <div
      class="h-75 p-3 rounded rounded-1 border border-1 border-white border-opacity-50"
    >
      <div class="mt-3">
        <h1 class="fs-3">
          <strong>
            {{post.title}}
          </strong>
        </h1>
      </div>
      <div class="my-2 justify-content-start">
        <p class="fs-2">
          R$:
          {{post.valuePerDay}}
        </p>
      </div>
      <div class="mt-auto">
        <div class="my-4">
          <p class="m-0">Estoque disponível</p>
        </div>
        {{#if buttonDisable}}
          {{!-- {{#if rent}} --}}
            {{!-- {{#if car}} --}}
              {{!-- <div
                class="d-flex justify-content-center align-items-center gap-4"
              >
                <div
                  class="d-flex p-2 justify-content-center align-items-center w-100"
                >
                  <strong class="fs-4 text-danger">Rented</strong>
                </div>
              </div> --}}
            {{!-- {{else}} --}}
              <div
                class="d-flex justify-content-center align-items-center gap-4"
              >
                <a
                  href="#"
                  class="btn btn-primary w-100 mb-2"
                >
                  <strong>Alugar</strong>
                </a>
              </div>
            {{!-- {{/if}} --}}
          {{!-- {{/if}} --}}
        {{else}}
          <div class="justify-content-center align-items-center gap-4">
            <a
              href="/posts/{{post._id}}/edit"
              class="btn btn-primary w-100 mb-2"
            >
              <strong>Editar</strong>
            </a>
            <form action="/posts/{{post._id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger w-100">
                <strong>Deletar</strong>
              </button>
            </form>
          </div>
        {{/if}}
      </div>
    </div>
    <div
      class="h-25 mt-3 p-3 rounded rounded-1 border border-1 border-white border-opacity-50"
    >
      <p class="m-0">Informações do vendedor</p>
      <div class="d-flex p-1 my-2 gap-1 text-nowrap">
        <img
          src="https://www.gravatar.com/avatar/{{md5
            post.seller.email
          }}?s=80&d=robohash"
          class="w-25"
          alt="..."
        />
        <p class="m-0 ms-2">
          {{post.seller.name}}
        </p>
      </div>
    </div>
  </div>
</div>