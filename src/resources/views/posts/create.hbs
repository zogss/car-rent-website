{{#each errors}}
  <div class="alet alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div
  class="container my-5 p-5 card bg-dark text-white"
  style="border-radius: 1rem;"
>
  <h1 class="border-bottom border-light border-opacity-75">
    Criar Post
  </h1>
  <form action="/posts" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
    <div class="h-100 gap-3">
      <div class="mt-3">
        <label class="form-label" for="title">Titulo:</label>
        <input
          type="text"
          name="title"
          id="title"
          class="form-control"
          placeholder="Ex: Chevrolet Onix 2.0"
          required
        />
        <div class="invalid-feedback">
          Campo obrigatório!
        </div>
      </div>
      <div class="mt-3">
        <label class="form-label" for="model">Modelo:</label>
        <input
          type="text"
          class="form-control"
          name="model"
          id="model"
          placeholder="Ex: Onix"
          required
        />
        <div class="invalid-feedback">
          Campo obrigatório!
        </div>
      </div>
      <div class="mt-3">
        <label class="form-label" for="brand">Marca:</label>
        <input
          type="text"
          class="form-control"
          name="brand"
          id="brand"
          placeholder="Ex: Chevrolet"
          required
        />
        <div class="invalid-feedback">
          Campo obrigatório!
        </div>
      </div class="my-1">

      <div class="row align-items-end justify-content-center mt-4">
        <div class="my-1 col-6">
          <label class="form-label" for="year">Ano:</label>
          <input
            type="number"
            class="form-control"
            name="year"
            id="year"
            placeholder="Ex: 2022"
            required
          />
          <div class="invalid-feedback">
            Campo obrigatório!
          </div>
        </div>
        <div class="my-1 col-6">
          <label class="form-label" for="plate">Placa:</label>
          <input
            type="text"
            class="form-control"
            name="plate"
            id="plate"
            placeholder="Ex: 3295-YRB"
            required
          />
          <div class="invalid-feedback">
            Campo obrigatório!
          </div>
        </div>
      </div>
      <div class="row align-items-end justify-content-center mt-4">
        <div class="my-1 col-4">
          <label class="form-label" for="size">Comprimento (cm):</label>
          <input
            type="number"
            class="form-control"
            name="size"
            id="size"
            placeholder="Ex: 240(Cm)"
            required
          />
          <div class="invalid-feedback">
            Campo obrigatório!
          </div>
        </div>
      
        <div class="my-1 col-4">
          <label class="form-label" for="maxSpeed">Velocidade máxima (km/h):</label>
          <input
            type="number"
            class="form-control"
            name="maxSpeed"
            id="maxSpeed"
            placeholder="Ex: 250(km/h)"
            required
          />
          <div class="invalid-feedback">
            Campo obrigatório!
          </div>
        </div>
        <div class="my-1 col-4">
          <label class="form-label" for="valuePerDay">Valor diário:</label>
          <input
            type="text"
            class="form-control"
            name="valuePerDay"
            maxlength="10"
            id="valuePerDay"
            onkeyup="formatarMoeda()"
            placeholder="Ex: 2.000,00"
            required
          />
          <div class="invalid-feedback">
            Campo obrigatório!
          </div>
        </div>
        <div class="my-1 col-12">
          <label class="form-label" for="fileName">Imagem do anuncio:</label>
          <input
            type="file"
            class="form-control"
            name="fileName"
            id="fileName"
            placeholder=""
            required
          />
          <div class="invalid-feedback">
            Campo obrigatório!
          </div>
        </div>
      </div>
      <!--<div>
        <select id="year" name="year" class="form-control" required>
          {{#each years as |year|}}
            <option value="{{year}}">{{year}}</option>
          {{/each}}
        </select>
      </div>-->
    </div>
    <div class="d-flex justify-content-center align-items-center mt-5">
      <button type="submit" class="btn btn-primary w-25">
        Criar
      </button>
    </div>
  </form>
</div>