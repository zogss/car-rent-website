<section
  class="vh-100"
  style="background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))"
>
  <form
    action="/users"
    class="h-100 container needs-validation"
    method="post"
    novalidate
  >
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body text-center p-5 pt-5">

            <div class="mb-md-5 mt-md-4 mb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Registration</h2>
              <p class="text-white-50 mb-5">Create your account here!</p>

              <div
                class="form-outline form-white mb-4 text-start fw-semibold fs-5"
              >
                <label class="form-label" for="name">Name:</label>
                <input
                  type="text"
                  class="form-control form-control-lg"
                  id="name"
                  name="name"
                  placeholder="Name"
                  aria-describedby="inputGroupPrepend"
                  required
                />
                <div class="invalid-feedback">
                  Por favor, preencha seu nome!
                </div>
              </div>

              <div
                class="form-outline form-white mb-4 text-start fw-semibold fs-5"
              >
                <label class="form-label" for="email">Email:</label>
                <input
                  type="email"
                  class="form-control form-control-lg"
                  id="email"
                  name="email"
                  placeholder="email@email.com"
                  aria-describedby="inputGroupPrepend"
                  required
                />
                <div class="invalid-feedback">
                  Por favor, preencha o e-mail!
                </div>
              </div>

              <div
                class="form-outline form-white mb-4 text-start fw-semibold fs-5"
              >
                <label class="form-label" for="password">Password:</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="Password"
                  class="form-control form-control-lg"
                  aria-describedby="inputGroupPrepend"
                  minlength="8"
                  required
                />
                <div class="invalid-feedback">
                  Por favor, preencha a senha!
                </div>
              </div>

              <div
                class="form-outline form-white mb-4 text-start fw-semibold fs-5"
              >
                <label class="form-label" for="password">Password confirmation:</label>
                <input
                  type="password"
                  id="password"
                  name="password_confirmation"
                  placeholder="Password confirmation"
                  class="form-control form-control-lg"
                  aria-describedby="inputGroupPrepend"
                  minlength="8"
                  required
                />
                <div class="invalid-feedback">
                  Por favor, confirme a senha!
                </div>
              </div>

              <button
                class="btn btn-outline-light btn-lg px-5 mt-3"
                type="submit"
              >Register</button>

            </div>

            <div>
              <p class="mb-0">Alreary have an account?
                <a href="/login" class="text-white-50 fw-bold">Sign In</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</section>